<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin_small"
        android:layout_marginBottom="@dimen/card_margin_small"
        android:layout_marginRight="@dimen/card_margin_medium"
        android:layout_marginLeft="@dimen/card_margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/activity_margin">

            <TextView
                android:id="@+id/activity_main_list_item_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_main_list_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginBottom="5dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="#bfbfbf"
                android:textSize="12sp"
                android:layout_gravity="center_vertical" />

            <!--
            <TextView
                android:id="@+id/all_rides_list_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="16sp"
                android:textColor="#ff8a65"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginLeft="5dp" />
                -->

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
